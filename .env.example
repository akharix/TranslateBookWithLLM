# Translation API Configuration
API_ENDPOINT=http://ollama:11434/api/generate
DEFAULT_MODEL=gemma3:27b
PORT=5000  # Port for the web interface

# LLM Provider Settings
LLM_PROVIDER=ollama  # Options: ollama, gemini
GEMINI_API_KEY=  # Your Google Gemini API key (required if using gemini provider)
GEMINI_MODEL=gemini-2.0-flash  # Default Gemini model

# Translation Settings
DEFAULT_SOURCE_LANGUAGE=Korean  # Default source language (can be any language name)
DEFAULT_TARGET_LANGUAGE=English  # Default target language (can be any language name)
MAIN_LINES_PER_CHUNK=25
REQUEST_TIMEOUT=60
OLLAMA_NUM_CTX=2048
MAX_TRANSLATION_ATTEMPTS=2
RETRY_DELAY_SECONDS=2

# SRT-specific configuration
SRT_LINES_PER_BLOCK=5
SRT_MAX_CHARS_PER_BLOCK=500